<Page
    x:Class="eShare.Client.Pages.Views.FriendOfflineViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- Friend offline view -->
        <StackPanel
                x:Name="FriendOfflineView"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <FontIcon
                    FontSize="36"
                    Glyph="&#xEE79;" />

            <TextBlock
                    Padding="32"
                    FontSize="16"
                    TextWrapping="Wrap"
                    FontWeight="SemiBold"
                    TextAlignment="Center"
                    Text="Sorry, it looks like your friend is currently unavailable. Why not chat with some of your other friends in the meantime?" />
        </StackPanel>
    </Grid>
</Page>
